{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "X To-Do Corp",
  "version": "1.0.0",
  "identifier": "com.xtodo.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "X To-Do Corp",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "X To-Do Corp",
    "copyright": "Copyright Â© 2025 X To-Do Corp. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Modern task management application",
    "longDescription": "X To-Do Corp is a powerful, Twitter/X-inspired task management application that combines elegant design with robust functionality. Features include smart task management, subtasks, priority levels, notes system, achievements, focus mode with Pomodoro timer, and beautiful themes.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null
      }
    }
  }
}
